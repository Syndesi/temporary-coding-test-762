CREATE USER IF NOT EXISTS 'maxscale'@'%' IDENTIFIED BY 'maxscale_password';
GRANT
  BINLOG ADMIN,
  CONNECTION ADMIN,
  READ_ONLY ADMIN,
  REPLICATION MASTER ADMIN,
  REPLICATION SLAVE ADMIN,
  REPLICATION CLIENT,
  REPLICATION SLAVE,
  SLAVE MONITOR,
  RELOAD,
  PROCESS,
  EVENT,
  SHOW DATABASES,
  SET USER
ON *.* TO 'maxscale'@'%';
GRANT
  SELECT ON mysql.* TO 'maxscale'@'%';
FLUSH PRIVILEGES;

RESET MASTER;
SET GLOBAL gtid_slave_pos = '0-1-0';
